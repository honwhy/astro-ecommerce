---
import Layout from "../layouts/Layout.astro";
import data from "../../public/data.json";
import "../../assets/scss/astro-ecommerce.scss";
import ProductFeature from "../components/products/productFeature";
import Navbar from "../components/navbar";
import Footer from "../components/footer";
import TestimonialsFade from "../components/promo/testimonialsFade";
import PromoSectionLarge from "../components/promo/promoSectionLarge";
import EmailForm from "../components/promo/EmailForm";
---

<Layout title="Landing Page">
  <main>
    <Navbar />
    <PromoSectionLarge
      title={"Collection is here"}
      full_description={data.products[0].full_description ?? ""}
      pageHeaderBgImg={"../images/floor1.jpg"}
      pageHeaderMinVh="80vh"
      client:load
    />
    <div class="container my-5">
      <div class="my-5">
        <ProductFeature
          title="THE THUMBS UP WORK FAST"
          images={data.products[2].images}
          full_description="Our crew will arrive at your location each morning at around 8:30 a.m. We begin with a greeting and then immediately review the application process with you, as well as answer any questions that you have. Our mobile trucks are fully equipped with all the equipment and materials that our crew needs to flawlessly complete your flooring project."
          featuresDetails={data.products[0].featuresDetails}
        />
      </div>
      <div class="mt-5 mb-10">
        <TestimonialsFade
          pageHeaderBgImg={"https://images.unsplash.com/photo-1519642918688-7e43b19245d8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2676&q=80"}
          pageHeaderMinVh="50vh"
        />
      </div>

      <Footer />
    </div>
  </main>
</Layout>
